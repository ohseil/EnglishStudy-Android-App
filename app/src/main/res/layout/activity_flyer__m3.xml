                android:id="@+id/b9"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="전치사 to"
                android:textSize="15dp"
                android:textColor="#ff000000"
                />

            <Button
                android:id="@+id/b10"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="전치사 into"
                android:textSize="15dp"
                android:textColor="#ff000000"
