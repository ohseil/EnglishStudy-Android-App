            <Button
                android:id="@+id/b6"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="전치사 at"
                android:textSize="15dp"
                android:textColor="#ff000000"
