<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff660000"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:fillViewport="true"
    tools:context="com.example.seil.tppracticing.activity.Sub_Flyer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/fm1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="Month 1"
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:onClick="fm1_Clicked"
                />

            <Button
                android:id="@+id/fm2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="Month 2"
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:onClick="fm2_Clicked"
                />

            <Button
                android:id="@+id/fm3"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="Month 3"
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:onClick="fm3_Clicked"
                />

            <Button
                android:id="@+id/fm4"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="Month 4"
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:onClick="fm4_Clicked"
                />

            <Button
                android:id="@+id/fm5"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="동사패턴"
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:onClick="fm5_Clicked"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
