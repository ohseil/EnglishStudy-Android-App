<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seil.tppracticing.activity.Q_View">

    <TextView
        android:id="@+id/ch_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:textColor="#ff000000"
        android:textSize="15dp"
        />

    <ImageButton
        android:id="@+id/imageB"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/empty"
        android:layout_marginTop="40dp"
        android:onClick="imageClicked"
        />

    <TextView
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Question"
        android:textColor="#ff000000"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/Qtv"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/question_border"
        android:padding="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="15dp"
        android:textColor="#ff000000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:textAlignment="center"
        android:text="Answer"
        android:textColor="#ff000000"
        android:textSize="30dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/answer_border">

        <TextView
            android:id="@+id/Atv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15dp"
            android:textColor="#ff0000ff"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/state_view"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#ff000000"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_border"
        android:text="Before"
        android:textSize="20dp"
        android:textAlignment="center"
        android:onClick="B_Clicked"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_border"
        android:text="Right Answer"
        android:textSize="17dp"
        android:textAlignment="center"
        android:onClick="RA_Clicked"
        />

    <Button
        android:id="@+id/Ranbtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_border"
        android:layout_marginBottom="60dp"
        android:text="Random!!"
        android:textSize="17dp"
        android:textAlignment="center"
        android:onClick="Random_Clicked"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_border"
        android:text="Next"
        android:textSize="20dp"
        android:textAlignment="center"
        android:onClick="N_Clicked"
        />

</RelativeLayout>
